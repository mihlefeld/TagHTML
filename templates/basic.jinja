<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Color+Emoji&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Funnel+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
    <link href="styles/jinja.css" rel="stylesheet">
<style>
    .page {
        justify-content: center;
        align-content: center;
        display: flex;
        flex-wrap: wrap;
        width: {{ page_width }}cm; /* important to keep this */
        height: {{ page_height }}cm; /* important to keep this */
    }
    @page {
        size: {{ page_width }}cm {{ page_height }}cm; /* important to keep this */
        margin: 0;
    }
    .tag {
        width: {{ tag_width }}cm; /* important to keep this */
        height: {{ tag_height }}cm; /* important to keep this */
    }
    html {
        font-family: "Funnel Sans", sans-serif;
        font-optical-sizing: auto;
        font-style: normal;
        margin: 0;
    }
    .tag {
        padding: 0.1cm;
        box-sizing: border-box;
        border: 0.05cm solid black;
    }

    /* front side */
    .front-tag {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .ft-name {
        font-size: xx-large;
        text-align: center;
    }

    /* back side */
    .back-tag {
        display: flex;
        font-size: 0.3cm;
    }
    .event-image {
        height: 0.3cm;
    }
    .schedule {
        width: 100%;
        height: 100%;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
    }
    .schedule > div {
        width: fit-content;
    }
</style>
</head>
<body style="margin: 0;">
    {% for page in pages %}
    <div class="page">
        {% for competitor in page %}
        <div class="tag front-tag competitor {{ competitor.role }}">
            <span class="ft-name">{{ competitor.firstname }} <br> {{ competitor.lastname }}</span>
        </div>
        {% endfor %}
    </div>
    <div class="page" style="flex-direction: row-reverse;">
        {% for competitor in page %}
        <div class="tag back-tag competitor {{ competitor.role }}">
            <div class="schedule">
                {% for assignment in competitor.assignments|sort(attribute='group_start_time') %}
                <div>
                    {{ assignment.group_start_time.strftime('%a %H:%M') }} 
                    <img class="event-image" src="graphics/svgs/{{ assignment.event }}.svg"> 
                    {{ assignment.role[0].upper() + assignment.group|string }} 
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% endfor %}
</div>
</body>
</html>